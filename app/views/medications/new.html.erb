<blockquote>
<div><h2>New Medications</h2></div>
<div>
<%= form_for :medication, url: medications_path do |f| %>
<br>
	<p>Drug name:  
    <%#= f.select :drug_name, Drug.pluck(:drug_name) %>
     <%= f.select :drug_id, options_from_collection_for_select(Drug.all, :id, :drug_name, nil)+ content_tag(:option,'Other',value: "") %> 
    </p>
  
  <p>
        Dosage:  <input type="text" size="10" value="" name="dosage[]">
        <select name="dosage[]">
        <option>mg</option>
        <option>ml</option>  
        </select>
    </p>
    <p>
        Timings:  <%= f.select :timing, ['1 Time', '2 Times', '3 Times', '4 Times'] %> a day
    </p>

    <p>
      Other drug, if any: <%= f.text_field :custom_drug, size: 20, disabled: :true %></p>
	<p><%= f.submit 'Save' %></p>
<% end %>
</div>
<br>
<br><br><br><br>
<%= link_to 'Back', dashboard_path %>

</blockquote>

<!-- jquery -->
<script>
    $(document).ready(function(){
      $('#medication_drug_id').change(function(){
        a = $(this).val()
        if ( a == '' ){
          $('#medication_custom_drug').prop('disabled', false);
        }
        else {
          $('#medication_custom_drug').prop('disabled', true);
        }
      })
    })
</script>